<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#ffffff"
    android:id="@+id/linear_views"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:minHeight="60dp"
        android:background="?android:attr/selectableItemBackground"
        android:layout_gravity="center_vertical"
        tools:ignore="UselessParent">

        <androidx.cardview.widget.CardView
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:cardCornerRadius="18dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="13.5dp"
            app:cardElevation="1dp">

            <ImageView
                android:id="@+id/user_image_views"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/p_profile"
                />

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="left"
                android:layout_marginTop="18dp"
                >
                <TextView
                    android:id="@+id/username_views"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:gravity="left"
                    android:layout_gravity="left"
                    android:textColor="#000000"
                    android:text="@string/username"/>

                <ImageView
                    android:id="@+id/bluetick_in_views"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/p_bluetick"
                    android:visibility="invisible"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="3dp"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/fullname_views"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:gravity="left"
                android:layout_marginRight="20dp"
                android:clickable="true"
                android:textColor="#8C8C8C"
                android:text="نام"/>

        </LinearLayout>

    </LinearLayout>


    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="#ECECEC"
        tools:ignore="MissingConstraints" />

</LinearLayout>