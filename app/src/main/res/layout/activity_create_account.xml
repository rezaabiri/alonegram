<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F9F9F9"
    tools:context="ir.cenlearn.alonegram.Activities.CreateAccount">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:background="@drawable/login_button_bk"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_gravity="center_vertical"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="25dp"
        android:background="@drawable/bg_edittext">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">


            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/app_name"
                android:textColor="#000000"
                android:textSize="30dp"
                android:layout_marginTop="30dp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/username"
                android:layout_width="275dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ12345678910_."
                android:drawableLeft="@drawable/user_icon_edit"
                android:gravity="center"
                android:maxLength="30"
                android:paddingLeft="10dp"
                android:paddingRight="35dp"
                android:hint="نام کاربری"
                android:textAllCaps="false"
                android:layout_marginTop="60dp"
                android:background="@drawable/bg_edittext"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/email"
                android:layout_width="275dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/email_icon"
                android:gravity="center"
                android:inputType="textEmailAddress"
                android:paddingLeft="10dp"
                android:paddingRight="35dp"
                android:hint="ایمیل"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_edittext"
                android:textSize="12dp" />


            <EditText
                android:id="@+id/password"
                android:layout_width="275dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/password"
                android:gravity="center"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:paddingRight="35dp"
                android:hint="رمز ورود"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_edittext"
                android:textSize="12dp" />

            <Button
                android:id="@+id/create"
                android:layout_width="275dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:text="مرحله بعدی"
                android:background="@drawable/s_selector_normal"
                android:textColor="#ffffff"
                android:textSize="12dp"
                android:layout_marginTop="10dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="50dp"
                android:background="#CFCFCF" />



            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:text="@string/Do_you_have_an_account"
                android:textColor="#000000"
                android:textSize="12dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/login"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="255dp"
                android:layout_height="40dp"
                android:layout_gravity="center|bottom"
                android:background="@drawable/s_selector"
                android:text="@string/login_account"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="12dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/privacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:textColor="#1E43AA"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:clickable="true"
                android:text="حریم خصوصی و توافق نامه کاربر"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>



</FrameLayout>